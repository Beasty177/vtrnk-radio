<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting -->
    <style name="LaunchTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <!-- Show a splash screen with dark gray background and logo -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    <!-- Theme applied after the process has started and behind Flutter UI -->
    <style name="NormalTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>
    <!-- Define dark gray color -->
    <color name="dark_gray">#1A1A1A</color>
</resources>
